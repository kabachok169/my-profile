{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": ["es2017", "dom"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
